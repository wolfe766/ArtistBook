<div class="profileContent">
  <div class="profileContainer">
      <%= image_tag @band.photo.url(:profile) %>
      <p class="profileName"> <%= @band.band_name %></p>
  </div>
  <% if band_signed_in? && @band_id = current_band.id %>
      <%= link_to "Edit your profile Â»", edit_band_path(current_band.id), "style" => "color:black", "class" => "bioEdit" %>
  <% end %>
  <div>
<%if business_signed_in?%>
<%= link_to "Request This Artist", new_business_request_path(band_id: @bandID), method: :get, class: "btn btn-info bigBtn", "role" => "button", "style" => "color:white" %>
<%end%>
</div>
  <div class="bioContainer">
    <table>
      <tr>
        <td class="bioCategory">Genre: </td>
        <td><%= @band.genre %> </td>
      </tr>
      <tr>
        <td class="bioCategory">Email: </td>
        <td><%= @band.email %> </td>
      </tr>
      <tr>
        <td class="bioCategory">Phone: </td>
        <td><%= @band.phone%> </td>
      </tr>
      <tr>
        <td class="bioCategory">Address: </td>
        <td><%= @band.address %> </td>
      </tr>
    </table>
    <h2>About</h2>
    <p><%= @band.bio %></p>
    </div>
    <% if @band.spotify_link %>
    <% if @band.spotify_link != "" %>
      <iframe src="https://open.spotify.com/embed?uri=<%= @band.spotify_link %>" width="300" height="300" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
    <% end %>
    <% end %>
</div>
