
<h1>Bands</h1>

<table>
  <thead>
    <tr>
      <th>Band name,</th>
      <th>Genre</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.band_name %></td>
        <td><%= band.genre %></td>
        <td><%= band.phone %></td>
        <td><%= band.address %></td>
        <td><%= band.email %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Band', new_band_path %>
